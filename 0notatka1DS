let zmienna = 'hello world';

zmienna.split(' '); #wartosc po ktorej dzielic string, w tym przypadku spacja
zmienna.trim(); #wycina biale znaki na poczatku albo koncu
zmienna.toUpperCase(); #podnosi do WIELKICH LITER
zmienna.toLowerCase(); #ROBI Z WIELKICH LITER male litery
